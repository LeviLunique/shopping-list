{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./", // Ajuste o rootDir para a raiz do backend
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}